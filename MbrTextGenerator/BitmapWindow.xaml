        <Viewbox  Name="eViewbox" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="10 5">
            <Grid Width="690" Height="85">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
