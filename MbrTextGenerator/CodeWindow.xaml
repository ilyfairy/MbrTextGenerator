<Window x:Class="MbrTextGenerator.CodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MbrTextGenerator"
        mc:Ignorable="d"
        Title="Code:" Height="300" Width="500"
        Name="eWindow"
        >
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" TextWrapping="Wrap" Width="{Binding ElementName=eWindow,Path=ActualWidth}"
                 AcceptsReturn="False" Grid.ColumnSpan="2"
                 HorizontalScrollBarVisibility="Visible"
                 VerticalScrollBarVisibility="Visible"
        />

    </Grid>
</Window>
